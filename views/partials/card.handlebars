<div class="col-md-4" id="post-card">
    <div class="row">
        <div class="col-md-3">
            <div class="card" style="width: 18rem;">
                <img src="/assets/img/user-images/{{file}}" alt="user submitted photo" class="card-img-top" />
                <div class="card-body">
                    <h3 class="card-title"> {{title}} </h3>
                    <div class="card-text">
                        {{description}}
                    </div>
                    <br />
                    <div class="post-username"> Posted by {{user.username}} </div>
                    <br />
                    <button class="like-btn" id="{{id}}">{{like_count}} 👍 </button>
                    <button class="post-btn">👎</button>
                    <button class="post-btn">☕ Comment</button>
                </div>
            </div>
        </div>
    </div>
</div>